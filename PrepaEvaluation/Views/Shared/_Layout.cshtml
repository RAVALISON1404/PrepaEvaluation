@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PrepaEvaluation</title>
    <link rel="stylesheet" href="~/lib/animate.css/animate.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/apex/dist/apexcharts.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.5.1-web/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bulma/css/bulma.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bulma-extensions/dist/css/bulma-extensions.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bulma-list/css/bulma-list.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bulma-dashboard/dist/bulma-dashboard.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="dashboard is-full-height">
<div class="pageloader is-link is-active"></div>
<aside class="dashboard-panel is-scrollable is-medium box">
    <header class="dashboard-panel-header is-flex is-justify-content-space-between">
        <h3 class="title has-text-info-bold">
            Title
        </h3>
        <div class="field">
            <label for="switch-mode">
                <span class="icon is-large has-text-warning">
                    <i class="fas fa-lg fa-sun"></i>
                </span>
            </label>
            <input type="checkbox" id="switch-mode" class="switch is-rounded is-outlined is-link">
            <label for="switch-mode">
                <span class="icon is-large has-text-link-25">
                    <i class="fas fa-lg fa-moon"></i>
                </span>
            </label>
        </div>
    </header>
    <section class="dashboard-panel-content">
        <aside class="menu">
            <p class="menu-label">General</p>
            <ul class="menu-list">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                </li>
                <li>
                    <a asp-controller="Sceance" asp-action="Index">
                        Scéance
                    </a>
                </li>
                <li>
                    <a asp-controller="Chart" asp-action="Index">
                        Chart
                    </a>
                </li>
            </ul>
            <p class="menu-label">Administration</p>
            <ul class="menu-list">
                <li>
                    <a>Team Settings</a>
                </li>
                <li>
                    <a>Manage Your Team</a>
                    <ul>
                        <li>
                            <a>Members</a>
                        </li>
                        <li>
                            <a>Plugins</a>
                        </li>
                        <li>
                            <a>Add a member</a>
                        </li>
                    </ul>
                    <li>
                        <a>Invitations</a>
                    </li>
                    <li>
                        <a>Cloud Storage Environment Settings</a>
                    </li>
                    <li>
                        <a>Authentication</a>
                    </li>
                </ul>
            <p class="menu-label">Transactions</p>
            <ul class="menu-list">
                <li><a>Payments</a></li>
                <li><a>Transfers</a></li>
                <li><a>Balance</a></li>
            </ul>
        </aside>
    </section>
    <footer class="dashboard-panel-footer">
        
    </footer>
</aside>
<main class="dashboard-main is-scrollable hero is-fullheight">
    <header class="hero-head">
        <nav class="navbar has-shadow is-transparent">
            <div class="navbar-menu">
                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="list has-visible-pointer-controls">
                            <div class="list-item">
                                <div class="list-item-image">
                                    <figure class="image">
                                        <img class="is-rounded" src="https://via.placeholder.com/128x128.png?text=Image" alt="">
                                    </figure>
                                </div>
                                <div class="list-item-content">
                                    <div class="list-item-title">Name</div>
                                    <div class="list-item-description">First Name</div>
                                </div>
                                <div class="list-item-controls">
                                    <a href="#">
                                        <span class="icon is-large">
                                            <i class="fas fs-lg fa-sign-out-alt"></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <section class="hero-body">
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <footer class="hero-foot footer p-0 m-0">
        <div class="section is-flex is-justify-content-space-between">
            <span>
                2024
            </span>
            <span>
                © IT Student
            </span>
        </div>
    </footer>
</main>
<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/lib/bulma-extensions/dist/js/bulma-extensions.min.js" asp-append-version="true"></script>
<script src="~/lib/bulma-toast/dist/bulma-toast.min.js" asp-append-version="true"></script>
<script src="~/lib/apex/dist/apexcharts.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/ajax.js" asp-append-version="true"></script>
<script>
    const successMessage = '@TempData["Success"]';
    if (successMessage) {
        bulmaToast.toast({ 
            message: successMessage, 
            dismissible: true, 
            duration: 5000,
            type: 'is-link has-text-white',
            animate: { 
                in: 'fadeIn', 
                out: 'fadeOut' }
            });
    }
    const errorMessage = '@TempData["Error"]';
    if (errorMessage) {
        bulmaToast.toast({ 
            message: errorMessage, 
            dismissible: true, 
            duration: 5000,
            type: 'is-background-danger-40 has-text-white',
            animate: { 
                in: 'fadeIn', 
                out: 'fadeOut' }
            });
    }
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>